<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="@color/chitchato_mebratu_cyan"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/chitchato_yellow"
            android:gravity="center"
            android:text="Search Group"
            android:textColor="@color/white_overlay"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:background="@color/cust_color_1"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <LinearLayout
            android:id="@+id/linear1_1_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:id="@+id/linear2_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@drawable/rectangletv_3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_vicinity_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:visibility="invisible"
                        android:inputType="none"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:minHeight="100dp"
                        android:paddingLeft="15dp"
                        android:hint="Group Name"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:textColor="@color/chitchato_blue"
                         >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_interest_search"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:textSize="30sp"
                        android:paddingLeft="15dp"
                        android:hint="Interest"
                        android:visibility="invisible"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                         >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_keyword_search"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:textSize="30sp"
                        android:hint="Age Limit "
                        android:visibility="invisible"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                         >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_leader_search"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:textSize="30sp"
                        android:hint="Leader Name"
                        android:visibility="invisible"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                         >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:textSize="30sp"
                        android:visibility="invisible"
                        android:hint="Vicinity"
                        android:paddingLeft="15dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                         >

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/chitchato_limon"
            android:orientation="horizontal"
            android:paddingRight="1dp"
            android:paddingTop="10dp"
            tools:context=".MainActivity" >

            <LinearLayout
                android:id="@+id/linear5_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
              
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                tools:context=".MainActivity" >

                <Button
                    android:id="@+id/btn_send_search"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text="Send"
                    android:textColor="@color/white_overlay"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>