<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/ll_check_box"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cust_color_1"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:id="@+id/ll_check_box_"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:orientation="horizontal"
            android:paddingBottom="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/tv_empty_checkbox"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/chitchato_blue" />

            <ImageView
                android:id="@+id/lang_chat_radio"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:background="@drawable/button_custom_circle"
                android:focusable="false"
                android:layout_gravity="center"
                android:padding="13dp"
                android:src="@drawable/check_box"
                android:text="test"
                android:textColor="@color/chitchato_blue" />

            <TextView
                android:id="@+id/tv_lang_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="language_here"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/chitchato_mebratu_blue" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/cust_color_1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/img_settings_radio_small_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="right"
                android:src="@drawable/ic_action_small_notification"
                android:text="test"
                android:textColor="@color/chitchato_blue" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>