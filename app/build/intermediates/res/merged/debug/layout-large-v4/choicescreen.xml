<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_1"
    android:gravity="center_vertical|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:background="@color/chitchato_limon"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_empty_bar_choicescreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.60"
            android:background="@color/chitchato_yellow"
            android:gravity="center"
            android:text=""
            android:textColor="@color/chitchato_blue"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/img_btn_more_small_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_action_small_notification"
            android:paddingBottom="10dp"
            android:paddingRight="0dp"
            android:translationX="10dp"
            android:translationY="-3dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top"
            android:layout_weight="0.80"
            android:background="@color/chitchato_mebratu_cyan"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:adjustViewBounds="false"
                android:background="@drawable/button_custom_extra_two"
                android:paddingBottom="0dp"
                android:paddingLeft="40dp" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@color/chitchato_mebratu_cyan"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/img_btn_debug"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_custom_extra_one"
                android:hint="Purge"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Debug"
                android:textSize="20sp"
                android:textColor="@color/white_overlay" />
        </LinearLayout>


        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@color/chitchato_mebratu_cyan"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/btn_sensors"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_custom_extra_one"
                android:hint="Sense"
                android:text="Sense"
                android:textSize="20sp"
                android:textColor="@color/white_overlay" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:background="@color/chitchato_mebratu_cyan"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp"
            android:layout_marginRight="2dp"
            >

            <Button
                android:id="@+id/btn_purge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_custom_extra_one"
                android:hint="Purge"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Purge"
                android:textSize="20sp"
                android:textColor="@color/white_overlay" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:background="@color/background_color_1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="3dp"
        tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:background="@color/chitchato_mebratu_cyan"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="2dp"
            tools:context=".MainActivity" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/cust_color_1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end" >

                <GridView
                    android:id="@+id/gridView1_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/activity_horizontal_margin"
                    android:listSelector="@color/cust_color_1"
                    android:numColumns="2"
                    android:paddingLeft="70dp"
                    android:paddingRight="3dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="insideOverlay"
                    android:textAlignment="gravity"
                    android:verticalSpacing="@dimen/activity_vertical_margin" >
                </GridView>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:visibility="gone" >
                </ProgressBar>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:background="@color/cust_color_1"
            android:orientation="horizontal"
            android:paddingBottom="5dp"

            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_weight="0.70"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingRight="2dp"
                android:paddingTop="0dp" >

                <Button
                    android:id="@+id/m2m_btn"
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/button_custom_circle_lime"
                    android:enabled="true"
                    android:gravity="top|center"
                    android:text="\n M 2 M \n Control"
                    android:textColor="@color/white_overlay"
                    android:textSize="25sp"
                    android:translationY="100dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="2dp"
            tools:context=".MainActivity" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.65"
                android:gravity="right"
                android:orientation="horizontal"
                android:background="@color/chitchato_mebratu_cyan"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                tools:context=".MainActivity" >

                <Button
                    android:id="@+id/button_choicescreen_profile_edit"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text="Profile"
                    android:textColor="@color/white_overlay"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>