<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/ll_check_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cust_color_1"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp"
        >

        <TextView
            android:id="@+id/tv_empty_checkbox"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/chitchato_blue" />
        <CheckBox
            android:id="@+id/lang_chat_radio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/check_box"
            android:text=""
            android:textColor="@color/chitchato_blue"
            style="@android:style/Theme.Holo.Light.Panel" />

        <TextView
            android:id="@+id/tv_lang_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:text="language_here"
            android:textColor="@color/chitchato_mebratu_blue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingRight="20dp"
            />


        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:background="@drawable/button_custom"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Accept"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />
        <Button
            android:id="@+id/btn_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:text="Decline"
            android:layout_margin="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            />

    </LinearLayout>

</LinearLayout>