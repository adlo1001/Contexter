<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:background="@color/background_color_1"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/tv_empty_bar_languagescreen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/chitchato_yellow"
            android:gravity="center"
            android:text="Language"
            android:textColor="@color/white_overlay"
            android:textSize="35dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:background="@color/background_color_1"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linear1_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end">

                <ListView
                    android:id="@+id/lv_language"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/cust_color_1"
                    android:clickable="true"
                    android:divider="@color/background_color_1"
                    android:dividerHeight="0.3dp"
                    android:drawSelectorOnTop="false"></ListView>
                <ExpandableListView
                    android:id="@+id/expandableListView_lan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/cust_color_1"
                    android:clickable="true"
                    android:divider="@color/background_color_1"
                    android:childDivider="@color/cust_color_1"
                    android:dividerHeight="0.3dp"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@color/cust_color_1"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:background="@color/chitchato_yellow"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            tools:context=".MainActivity"></LinearLayout>
    </LinearLayout>

</LinearLayout>