<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:background="@color/background_color_1"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/chitchato_mebratu_cyan"
                android:gravity="center"
                android:text="Change Default Images"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white_overlay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end">

                <EditText
                    android:id="@+id/edt_error_box"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rectangletv_3"
                    android:clickable="false"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="center_horizontal|center"
                    android:inputType="none"
                    android:text="@string/action_chitchato"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/red"
                    android:visibility="gone">

                    <requestFocus />
                </EditText>

                <LinearLayout
                    android:id="@+id/linear_other_settings"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/cust_color_1"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="1dp"
                    android:paddingTop="2dp"
                    android:visibility="visible"
                    tools:context=".MainActivity">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_contexter"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_contexter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Contexter"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">


                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_group"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Group"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">



                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_uci"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_uci"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="UCI"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">


                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_search"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />


                        <TextView
                            android:id="@+id/tv_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="Search"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">
                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_help"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="Help"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">



                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_about"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="About"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="vertical">


                        <se.sensiblethings.app.chitchato.extras.CustomImageView
                            android:id="@+id/cust_img_btn_quit"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:padding="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_image"
                            app:riv_border_color="@color/chitchato_mebratu_blue"
                            app:riv_border_width="0dp"
                            app:riv_corner_radius="5dp"
                            app:riv_mutate_background="true"
                            app:riv_oval="true" />


                        <TextView
                            android:id="@+id/tv_quit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="Quit"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/chitchato_mebratu_blue" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="2dp"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:background="@color/chitchato_mebratu_cyan"
                android:gravity="left"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="11dp">

                <Button
                    android:id="@+id/btn_error_try_again"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text=" "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white_overlay" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>