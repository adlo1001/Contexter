<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_welcomescreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cust_color_1"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:background="@color/cust_color_1"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.35"
                android:background="@color/chitchato_mebratu_cyan"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/chitchato_mebratu_cyan"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/cust_color_1"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.73"
                        android:background="@color/chitchato_mebratu_cyan"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/white_overlay"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75"
                        android:background="@color/background_color_1"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:paddingTop="0dp">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/chitchato_mebratu_cyan"
                            android:orientation="horizontal"
                            android:paddingBottom="0dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="0dp">
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/chitchato_mebratu_cyan"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingTop="2dp">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@color/white_overlay"
                            android:orientation="horizontal"
                            android:paddingBottom="0dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="2dp"></LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/white_overlay"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_copy_right_welcome"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/white_overlay"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp">

                        <TextView
                            android:id="@+id/tv_welcomescreen_copyright"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:gravity="center|top"
                            android:text="   Â© 2017 12Stars Studio. All Rights Reserved"
                            android:textColor="@color/chitchato_mebratu_blue"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_terms_policies_welcome"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/white_overlay"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp">
                        <TextView
                            android:id="@+id/tv_welcomescreen_terms_policies_1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:gravity="right|top"
                            android:clickable="true"
                            android:text="By selecting Next you agree to our "
                            android:textColor="@color/chitchato_mebratu_blue"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/tv_welcomescreen_terms_policies_2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:gravity="left|top"
                            android:clickable="true"
                            android:text="Terms and Policies"
                            android:textColor="@color/chitchato_mebratu_cyan"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:layout_weight="0.55"
                        android:background="@color/cust_color_1"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="43dp"
                            android:maxWidth="73.5dp"
                            android:gravity="center_vertical"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_launcher_front_page" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.65"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="2dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/imageView2________"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_welcomescreen"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="center|bottom"
                    android:text="Welcome to Contexter"
                    android:textColor="@color/chitchato_mebratu_blue"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_welcomescreen_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="center|top"
                    android:text="Simple - IoT - P2P - Free"
                    android:textColor="@color/chitchato_mebratu_blue"
                    android:textSize="14dp" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="1000dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangletv_1"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="0dp"
                    >

                    <RadioButton
                        android:id="@+id/radio0_ordinary_chat_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:checked="true"
                        android:text="Texting"
                        android:paddingRight="10dp"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="14sp"
                        android:foreground="@color/chitchato_limon"
                      />

                    <RadioButton
                        android:id="@+id/radio1_context_chat_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="conTexting"
                        android:paddingBottom="0dp"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/chitchato_mebratu_cyan"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_welcome_"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom_transparent_edge"
                    android:text="Next"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white_overlay" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>