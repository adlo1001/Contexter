                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
                                    android:text="@string/help_text_3_en"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >


                                </EditText>

                                <EditText
                                    android:id="@+id/edt_help_box_3_1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
                                    android:text="@string/help_text_3_1_en"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >


                                </EditText>

                                <EditText
                                    android:id="@+id/edt_help_box_4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangletv_3"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
                                    android:text="@string/help_text_4_en"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >

                                </EditText>

                                <EditText
                                    android:id="@+id/edt_help_box_4_1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
                                    android:text="@string/help_text_4_1_en"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >


                                </EditText>

                                <EditText
                                    android:id="@+id/edt_help_box_5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rectangletv_3"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
                                    android:text="@string/help_text_5_en"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >

                                </EditText>

                                <EditText
                                    android:id="@+id/edt_help_box_5_1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:editable="false"
                                    android:ems="10"
                                    android:gravity="top|left"
                                    android:inputType="none"
