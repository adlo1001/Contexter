                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/chitchato_mebratu_blue" >
                                </EditText>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>