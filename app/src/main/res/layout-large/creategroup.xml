<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:background="@color/background_color_1"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/tv_create_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/chitchato_yellow"
            android:gravity="center"
            android:text="Create Group"
            android:textSize ="35dp"
            android:textColor="@color/white_overlay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:background="@color/chitchato_limon"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <LinearLayout
            android:id="@+id/linear1_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:background="@color/cust_color_1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@drawable/rectangletv_3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_group_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:hint="Group Name"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp"
                         >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_group_interest"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:hint="Interest"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_group_age_limit"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:hint="Age Limit (x+)"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_group_leader"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:hint="Leader"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <EditText
                        android:id="@+id/edt_group_secret_code"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/chitchato_blue"
                        android:textSize="30sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <ImageButton
                        android:id="@+id/img_btn_profile_PIC"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:adjustViewBounds="false"
                        android:background="@drawable/rectangletv_2"
                        android:cropToPadding="false"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:src="@drawable/profile_image" />

                    <se.sensiblethings.app.chitchato.extras.CustomImageView
                        android:id="@+id/cust_img_btn_profile_PIC"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@color/chitchato_mebratu_cyan"
                        android:padding="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_image"
                        app:riv_border_color="@color/chitchato_mebratu_cyan"
                        app:riv_border_width="0dp"
                        app:riv_corner_radius="365dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />


                    <TextView
                        android:id="@+id/tv_click_profile_iamge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Tap Here to add image"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textAppearance="?android:attr/textAppearanceLarge"  >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:visibility="gone" >
        </ProgressBar>

        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/background_color_1"
            android:orientation="horizontal"
            android:paddingRight="1dp"
            android:paddingTop="2dp"
            tools:context=".MainActivity" >

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:background="@color/chitchato_mebratu_cyan"
                >

                <Button
                    android:id="@+id/button_create_group"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text="Send"
                    android:textColor="@color/white_overlay"
                    android:textSize="30sp"  />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>