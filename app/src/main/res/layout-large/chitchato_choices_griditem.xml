<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingRight="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="2dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:orientation="horizontal"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/choices_btn"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/button_custom_circle_cust_two"
                android:enabled="true"
                android:gravity="center"
                android:text="none"
                android:textColor="@color/chitchato_blue"
                android:textSize="25sp" />

            <Button
                android:id="@+id/choices_btn_concentric"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/button_custom_circle_large_screen"
                android:enabled="true"
                android:gravity="center"
                android:text="a"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/chitchato_border_color"
                android:textSize="75sp"
                android:translationX="-165dp"
                android:translationY="0dp"
                android:visibility="gone" />

            <se.sensiblethings.app.chitchato.extras.CustomImageView
                android:id="@+id/cust_img_btn_choices_PIC"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/background_color_1"
                android:padding="6dip"
                android:scaleType="centerCrop"
                android:src="@drawable/world_map_temp_two___________"
                android:translationX="-170dp"
                android:translationY="0dp"
                app:riv_border_color="@color/chitchato_mebratu_cyan"
                app:riv_border_width="0dip"
                app:riv_corner_radius="365dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tv_choices_sub_item"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fitsSystemWindows="false"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingRight="20dp"
                android:text="subitem"
                android:textColor="@color/chitchato_mebratu_blue"
                android:textSize="30sp"
                android:translationX="10dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>