<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_overlay"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:background="@color/chitchato_mebratu_cyan"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_localPeer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/chitchato_mebratu_cyan"
            android:gravity="center"
            android:text="My Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_overlay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_local_peer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.2"
        android:background="@color/chitchato_mebratu_cyan"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <LinearLayout
            android:id="@+id/linear1_1_local_peer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:id="@+id/linear2_local_peer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@drawable/rectangletv_3"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <ImageButton
                        android:id="@+id/img_btn_profile_PIC"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:adjustViewBounds="false"
                        android:background="@color/chitchato_mebratu_cyan"
                        android:cropToPadding="false"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:src="@drawable/profile_image" />
                    <se.sensiblethings.app.chitchato.extras.CustomImageView
                        android:id="@+id/cust_image_view_profile_PIC"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:background="@color/chitchato_mebratu_cyan"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_image"
                        app:riv_border_color="@color/chitchato_mebratu_cyan"
                        app:riv_border_width="0dp"
                        app:riv_corner_radius="265dp"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <TextView
                        android:id="@+id/tv_click_profile_iamge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Tap here to add your image"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_blue" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <TextView
                        android:id="@+id/tv_peerPro_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="Name:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >

                    </TextView>

                    <EditText
                        android:id="@+id/edt_peerPro_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:hint="Peer Name"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <TextView
                        android:id="@+id/tv_peerPro_nick"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:maxLines="1"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="Nickname:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >

                    </TextView>

                    <EditText
                        android:id="@+id/edt_peerPro_nick"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:hint="Peer nick"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <TextView
                        android:id="@+id/tv_peerPro_sex"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="Sex:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </TextView>

                    <EditText
                        android:id="@+id/edt_peerPro_sex"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:hint="E.g. M, F,NA"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <TextView
                        android:id="@+id/tv_peerPro_age"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="Age:"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </TextView>

                    <EditText
                        android:id="@+id/edt_peerPro_age"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:hint="Peer age"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_peerPro_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Phone:"
                        android:visibility="gone"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue"></TextView>

                    <EditText
                        android:id="@+id/edt_peerPro_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:hint="E.g. 046736469000"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_blue"
                        android:maxLines="1"
                        android:focusableInTouchMode="true"
                        android:lines="1"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp" >

                    <TextView
                        android:id="@+id/tv_peerPro_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="left"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:text="Portfolio"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_mebratu_blue" >
                    </TextView>

                    <Spinner
                        android:id="@+id/spinner_my_profile_portofolio"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.35"
                        android:background="@drawable/rectangletv_2"
                        android:gravity="center"
                        android:paddingBottom="0dp"
                        android:paddingTop="10dp"
                        android:scrollbars="vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/chitchato_blue"
                        tools:listitem="@android:layout/simple_spinner_dropdown_item" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4_myprofile___"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/chitchato_mebratu_cyan"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingRight="1dp"
            android:paddingTop="0dp"
            tools:context=".MainActivity" >

            <LinearLayout
                android:id="@+id/linear5_profile_pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <Button
                    android:id="@+id/button_refresh_my_profile"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text="Update"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white_overlay" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>