<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_overlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_overlay"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/chitchato_limon"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_pr_chat_title"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_weight="0.15"
                android:layout_gravity="center"
                android:background="@color/chitchato_yellow"
                android:gravity="center_vertical|center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white_overlay" />
            <ImageButton
                android:id="@+id/btn_hide"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:minHeight="50dip"
                android:minWidth="50dip"
                android:layout_weight="0.85"
                android:layout_gravity="left"
                android:gravity="center_horizontal"
                android:adjustViewBounds="false"
                android:background="@drawable/circlebtn_yellow_without_border"
                android:cropToPadding="false"
                android:src="@drawable/ic_ab_hide_holo_light"
                />

            <ImageButton
                android:id="@+id/btn_show"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:minHeight="50dip"
                android:minWidth="50dip"
                android:layout_weight="0.85"
                android:layout_gravity="left"
                android:gravity="center_horizontal"
                android:adjustViewBounds="false"
                android:visibility="gone"
                android:background="@drawable/circlebtn_yellow_without_border"
                android:cropToPadding="false"
                android:src="@drawable/ic_ab_show_holo_light"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1_pr_chat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:background="@color/white_overlay"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:id="@+id/linear1_1_pr_chat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="@color/cust_color_1"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="2dp" >

                <LinearLayout
                    android:id="@+id/linear2_pr_chat"
                    android:layout_width="fill_parent"
                    android:layout_height="400dip"
                    android:layout_weight="0.2"
                    android:background="@color/white_overlay"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="10dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical|horizontal"
                    android:showDividers="none|beginning|middle|end" >

                    <GridView
                        android:id="@+id/gridView1_pr_chat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_3"
                        android:numColumns="1"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" >
                    </GridView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="400dip"
                    android:layout_weight="0.8"
                    android:background="@color/white_overlay"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="10dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical|horizontal"
                    android:showDividers="none|beginning|middle|end" >

                    <ListView
                        android:id="@+id/ListView1_pr_chat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rectangletv_1"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4_pr_chat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:background="@color/white_overlay"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.35"
                    android:background="@drawable/rectangletv_1"
                    android:gravity="left"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp" >

                    <EditText
                        android:id="@+id/editText3_pr_chat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:gravity="center|left"
                        android:hint="enter text here"
                        android:background="@color/cust_color_1"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textAppearance="?android:attr/textAppearanceMedium" >
                    </EditText>

                    <ImageButton
                        android:id="@+id/img_btn_add_prfile"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/cust_color_1"
                        android:paddingLeft="2dip"
                        android:src="@drawable/ic_attachment" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear5_pr_chat"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:background="@color/white_overlay"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/button1_pr_chat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/button_custom"
                        android:text="Send"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white_overlay" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>