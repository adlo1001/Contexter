<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chitchato_limon"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_welcomescreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cust_color_1"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="2dp"
        tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.55"
                android:background="@color/chitchato_limon"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal"
                android:showDividers="none|beginning|middle|end" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/chitchato_limon"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/cust_color_1"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.73"
                        android:background="@color/chitchato_yellow"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/chitchato_limon"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75"
                        android:background="@color/cust_color_1"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/chitchato_limon"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.77"
                        android:background="@color/chitchato_yellow"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.8"
                        android:background="@color/cust_color_1"
                        android:orientation="horizontal"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"

                        android:paddingRight="15dp"
                        android:paddingTop="0dp" >


                        <TextView
                            android:id="@+id/tv_welcomescreen_copyright"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:visibility="invisible"
                            android:gravity="center|top"
                            android:text="   Â© 2017 12Stars Studio. All Rights Reserved"
                            android:textColor="@color/chitchato_mebratu_blue"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_terms_policies_welcome"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/white_overlay"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp">
                        <TextView
                            android:id="@+id/tv_welcomescreen_terms_policies_1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:gravity="right|top"
                            android:visibility="invisible"
                            android:clickable="true"

                            android:text="By selecting Next you agree to our "
                            android:textColor="@color/chitchato_mebratu_blue"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/tv_welcomescreen_terms_policies_2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.2"
                            android:gravity="left|top"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:text="Terms and Policies"
                            android:textColor="@color/chitchato_mebratu_cyan"
                            android:textSize="14dp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="2dp"
                android:paddingTop="0dp" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher_front_page" />

                <TextView
                    android:id="@+id/tv_welcomescreen"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="Welcome to Contexter"
                    android:textColor="@color/chitchato_mebratu_blue"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_welcomescreen_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="Simple - IoT - P2P - Free"
                    android:textColor="@color/chitchato_mebratu_blue"
                    android:textSize="14dip" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="1000dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangletv_1"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="2dp" >

                    <RadioButton
                        android:id="@+id/radio0_ordinary_chat_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:paddingRight="30dp"
                        android:text="Texting"
                        android:textColor="@color/chitchato_mebratu_blue" />

                    <RadioButton
                        android:id="@+id/radio1_context_chat_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ConTexting"
                        android:textColor="@color/chitchato_mebratu_blue" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/chitchato_limon"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="1dp" >

                <Button
                    android:id="@+id/btn_welcome_"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_custom"
                    android:text="Next"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white_overlay" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>