<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:background="@color/chitchato_limon"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_empty_bar_helpscreen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/chitchato_mebratu_cyan"
                android:gravity="center"
                android:minHeight="30dp"
                android:text="Support"
                android:textColor="@color/white_overlay"
                android:textSize="35sp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:background="@color/cust_color_1"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/linear1_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:background="@color/cust_color_1"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                tools:context=".MainActivity">

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cust_color_1"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical|horizontal"
                    android:showDividers="none|beginning|middle|end">

                    <EditText
                        android:id="@+id/edt_help_box_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangletv_3"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="left|center"
                        android:inputType="none"
                        android:text="Email:"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_1_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="\nsupport@contexter.mobi \naddisuthomas@gmail.com \n"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangletv_3"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="Visit us:"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_2_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text=""
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangletv_3"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="Website:"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_3_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="wwww.contexter.mobi"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangletv_3"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="@string/help_text_4_en"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp"
                        android:visibility="invisible">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_4_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="@string/help_text_4_1_en"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp"
                        android:visibility="invisible">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangletv_3"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="@string/help_text_5_en"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp"
                        android:visibility="invisible">

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/edt_help_box_5_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:editable="false"
                        android:ems="10"
                        android:gravity="top|left"
                        android:inputType="none"
                        android:text="@string/help_text_5_1_en"
                        android:textColor="@color/chitchato_mebratu_blue"
                        android:textSize="30sp"
                        android:visibility="invisible">

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>