<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_grditem_4"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:background="@android:color/transparent"
        android:layout_marginBottom="15dp"
        android:minHeight="100dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/imageView_lo_"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center|bottom"
            android:background="@android:color/transparent"
            android:layout_margin="1dp"
            android:padding="0dp"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:id="@+id/imageView_grditem_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@drawable/rectangletv_2"
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_image" />

            <se.sensiblethings.app.chitchato.extras.CustomImageView
                android:id="@+id/cust_imageView_grditem_1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image_android"
                app:riv_border_color="@android:color/transparent"
                app:riv_border_width="2dp"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="false"
                app:riv_oval="false" />



            <TextView
                android:id="@+id/tv_chat_screen_context_chatter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Chitchater"
                android:textColor="@color/chitchato_blue"
                android:textSize="12sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/imageView_svo_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/rectangletv_4_reverse_180_green"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:paddingRight="0dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:id="@+id/imageView_llo_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="2dp"
                tools:context=".MainActivity">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.35"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="0dp"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/editText_grditem_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:maxWidth="250dp"
                        android:text="@string/help_text_1_1_en"
                        android:hint=""
                        android:textColor="@color/chitchato_mebratu_blue"></TextView>

                    <ImageView
                        android:id="@+id/image_tosend_chat_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/image_message_default"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imageView_llo_sub_item_"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="0.65"
                    android:gravity="left"
                    android:paddingRight="2dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_chat_screen_context_chat_time"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom|left"
                        android:gravity="center|bottom"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:scrollHorizontally="true"
                        android:text=""
                        android:textColor="@color/chitchato_border_color"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imageView_llo_sub_item_advs"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center|left"
        android:layout_marginLeft="60dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_weight="0.9"
        android:visibility="visible"
        android:paddingRight="2dp"
        android:paddingTop="1dp">
        <LinearLayout
            android:id="@+id/imageView_llo_sub_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:paddingRight="2dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/imageView_llo_sub_item_002_____________________"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/imageView_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="center|bottom"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="--"
                    android:textColor="@color/chitchato_border_color"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:typeface="monospace" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/imageView_llo_sub_item_002_______"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/imageView_loud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingRight="30dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_loud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="center|bottom"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="--"
                    android:textColor="@color/chitchato_border_color"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:typeface="monospace" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imageView_llo_sub_item_002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/imageView_thermo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:paddingRight="30dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_thermo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="center|bottom"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="--"
                    android:textColor="@color/chitchato_border_color"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:typeface="monospace" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/imageView_llo_sub_item_001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/imageView_run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:paddingRight="30dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tv_run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:gravity="center|bottom"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text="--"
                    android:textColor="@color/chitchato_border_color"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:typeface="monospace" />
            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/gv_adv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:visibility="gone"
        android:layout_gravity="top"
        android:gravity="top"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"></GridView>

</LinearLayout>